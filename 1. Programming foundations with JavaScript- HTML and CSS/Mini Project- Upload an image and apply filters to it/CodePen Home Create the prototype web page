    font-size: 1em;
    margin: 10px 0;
}
#js
function upload() {
            var fileInput = document.getElementById("fileInput");
            var image = new SimpleImage(fileInput);
            var canvas = document.getElementById("myCanvas");
            image.drawTo(canvas);
        }
